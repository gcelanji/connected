<div class="feed-container mx-auto mt-5">
  <%= link_to "Share your post!", new_post_path, class: "btn btn-sm btn-main-custom w-100 mb-2" %>
  <% @posts.each do |post| %>
    <div class="my-3 p-3 bg-white shadow">
      <div class="d-flex">
      <h5 class="me-2"><%= post.user.full_name %></h5>
      <small><%= post.updated_at %></small>
      </div>
      <p class="content mt-3"><%= post.content %><p>
    </div>
  <% end %>
</div>
